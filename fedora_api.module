function fedora_api_modifyDatastream($pid, $dsID, $file_path = '', $dsLocation = '', $altIDs = '', $dsLabel = '', $versionable = 'true', $dsState = 'A', $formatURI = '',
                          $checksumType = 'DEFAULT', $checksum = '', $mimeType = '', $logMessage = '', $force = 'false', $ignoreContent = 'false') {
